generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  clerkId   String  @unique
  image     String?
  firstName String?
  lastName  String?
  email     String  @unique
  credit    Int     @default(120)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
